#Q.1-
def fact(n):
    if(n==0 or n==1):
        return 1
  
    elif(n>1):
        return n*(fact(n-1))
    else:
        return -1
n=int(input ("Enter a no. : "))
print(fact(n))
#Q.2-
def fibo(n,a,b,l):
    if n==1:
        return a
    elif n==2:
        return l
    elif(n>2):
        a,b=b,a+b
        l.append(b)
        n-=1
        return fibo(n,a,b,l)
    else :
        return -1
n=int(input ("Enter a no. : "))
print("Fibonacci series up to n is : ",fibo(n,0,1,l=[0,1]))
#Q.3-
def sofno(n,sum):
    if n==0:
        return sum
    elif n>0:
        sum+=n%10
        n=n//10
        return sofno(n,sum)
    else :
        return -1
n=int(input ("Enter a no. : "))
print("Sum of digits = ",sofno(n,0))
